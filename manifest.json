{
  "manifest_version": 3,
  "name": "WhatsHybrid Lite",
  "version": "1.3.8",
  "description": "WhatsHybrid Lite — envio 100% automático de mensagens no WhatsApp Web (URL)",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "WhatsHybrid Lite",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://api.whatsapp.com/*",
    "https://*.whatsapp.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://api.whatsapp.com/*"
      ],
      "js": [
        "content/utils/constants.js",
        "content/utils/logger.js",
        "content/utils/phone-validator.js",
        "content/utils/selectors.js",
        "content/worker-content.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/extractor.contacts.js",
        "content/wpp-hooks.js",
        "icons/*.png",
        "icons/16.png",
        "icons/48.png",
        "icons/128.png"
      ],
      "matches": [
        "https://web.whatsapp.com/*",
        "https://api.whatsapp.com/*"
      ]
    }
  ]
}